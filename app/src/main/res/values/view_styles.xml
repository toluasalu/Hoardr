<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Toolbar -->
    <style name="Toolbar" parent="Theme.AppCompat.Light">
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/white</item>
        <!-- color used by navigation icon -->
        <item name="colorControlNormal">@color/white</item>
        <!-- color used by overflow menu -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <!-- Circular Image View-->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--Rounded corners Image View-->
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <!--Card-->
    <style name="Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">2sp</item>
        <item name="cardElevation">2sp</item>
        <item name="cardMaxElevation">4sp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!--Button-->
    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:theme">@style/Theme.MaterialComponents</item>
        <item name="android:textAppearance">@style/MulishBold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/hot_pink</item>
        <item name="cornerRadius">4dp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!--Text Input-->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/text_shade_2</item>
        <item name="endIconTint">@color/text_shade_2</item>
        <item name="errorTextColor">@color/red</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="boxStrokeColor">@color/text_shade_4</item>
    </style>
    <style name="DropDownInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/text_shade_2</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/text_shade_4</item>
    </style>
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
    </style>
</resources>